<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
      Package visibility (Android 11+):
      We query activities that can handle ACTION_SENDTO with "mailto:" in EmailAppPickerActivity.
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareToEmail">

        <!-- Launcher activity / settings UI -->
        <activity
            android:name="ch.hubisan.sharetoemail.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Internal picker used from Settings to select the default email app (Gmail, etc.) -->
        <activity
            android:name=".EmailAppPickerActivity"
            android:exported="false" />

        <!--
          Share receiver "trampoline" activity.
          - Receives SEND/SEND_MULTIPLE via the activity-alias entries below.
          - Composes an email intent and forwards to the selected email app.
          - Should not remain in history/recents.
        -->
        <activity
            android:name=".ShareActivity"
            android:exported="true"
            android:noHistory="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />

        <!-- Share target A -->
        <activity-alias
            android:name=".ShareAliasA"
            android:targetActivity=".ShareActivity"
            android:exported="true"
            android:label="Share to @A"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity-alias>

        <!-- Share target B -->
        <activity-alias
            android:name=".ShareAliasB"
            android:targetActivity=".ShareActivity"
            android:exported="true"
            android:label="Share to @B"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity-alias>

        <!-- Share target C -->
        <activity-alias
            android:name=".ShareAliasC"
            android:targetActivity=".ShareActivity"
            android:exported="true"
            android:label="Share to @C"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>
